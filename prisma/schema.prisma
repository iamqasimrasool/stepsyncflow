generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  OWNER
  ORG_ADMIN
  DEPT_ADMIN
  EDITOR
  VIEWER
}

enum VideoType {
  YOUTUBE
}

model Organization {
  id        String       @id @default(cuid())
  name      String       @unique
  slug      String       @unique
  createdAt DateTime     @default(now())
  departments Department[]
  users     User[]
  sops      SOP[]
}

model Department {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  createdAt DateTime @default(now())
  org       Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  users     UserDepartment[]
  sections  SOPSection[]
  sops      SOP[]

  @@unique([orgId, name])
  @@index([orgId])
}

model User {
  id           String   @id @default(cuid())
  orgId        String
  name         String
  email        String   @unique
  passwordHash String
  avatarUrl    String?
  role         Role
  createdAt    DateTime @default(now())
  org          Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  departments  UserDepartment[]
  sopComments  SOPComment[]
  resetTokens  PasswordResetToken[]

  @@index([orgId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model UserDepartment {
  id           String   @id @default(cuid())
  userId       String
  departmentId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([userId, departmentId])
  @@index([departmentId])
}

model SOP {
  id           String   @id @default(cuid())
  orgId        String
  departmentId String
  sectionId    String?
  order        Int      @default(0)
  title        String
  summary      String?
  videoType    VideoType @default(YOUTUBE)
  videoUrl     String
  isPublished  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  org          Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  department   Department   @relation(fields: [departmentId], references: [id], onDelete: Restrict)
  section      SOPSection?  @relation(fields: [sectionId], references: [id], onDelete: SetNull)
  shareLink    SOPShareLink?
  comments     SOPComment[]
  steps        SOPStep[]

  @@index([orgId])
  @@index([departmentId])
  @@index([sectionId])
}

model SOPSection {
  id           String   @id @default(cuid())
  departmentId String
  title        String
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  sops         SOP[]

  @@unique([departmentId, title])
  @@index([departmentId])
}

model SOPStep {
  id        String   @id @default(cuid())
  sopId     String
  order     Int
  heading   String
  body      String?
  timestamp Int
  createdAt DateTime @default(now())
  sop       SOP      @relation(fields: [sopId], references: [id], onDelete: Cascade)

  @@index([sopId])
}

model SOPComment {
  id        String   @id @default(cuid())
  sopId     String
  authorId  String
  parentId  String?
  body      String
  timestamp Int
  editedAt  DateTime?
  createdAt DateTime @default(now())
  sop       SOP      @relation(fields: [sopId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent    SOPComment? @relation("SOPCommentToSOPComment", fields: [parentId], references: [id], onDelete: Cascade)
  replies   SOPComment[] @relation("SOPCommentToSOPComment")
  edits     SOPCommentEdit[]

  @@index([sopId])
  @@index([authorId])
  @@index([parentId])
}

model SOPCommentEdit {
  id        String   @id @default(cuid())
  commentId String
  body      String
  editedAt  DateTime @default(now())
  comment   SOPComment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@index([commentId])
}

model SOPShareLink {
  id           String   @id @default(cuid())
  sopId        String   @unique
  token        String   @unique
  enabled      Boolean  @default(false)
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sop          SOP      @relation(fields: [sopId], references: [id], onDelete: Cascade)

  @@index([sopId])
}
